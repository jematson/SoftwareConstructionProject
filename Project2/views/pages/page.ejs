    <input type='password' pattern="(?=.*[0-9])(?=.*[a-z])(?=.*[A-Z])(?=.*[!@#$%^&*_]).{8,}" title="Password must be at least 8 characters long and must contain at least one of each of the following: lowercase letter, uppercase letter, special character(!@#$%^&*_), and number." id="txt_pwd" name="pwd"></input><br>
    
    <input type="Submit" value="Sign in">
    <input type="Submit" value="Sign up" formaction="http://localhost:10000/signup">
</form>

