<!DOCTYPE html>
<html>

<style>
h1 {text-align:center;}
p {text-align: center;}
form {text-align: center;}
h2 {text-align:center;}
ul {text-align:center;}

.button {
  background-color: #e8e0c8;
  border: none;
  color: black;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  margin: 4px 2px;
  cursor: pointer;
  width: 250px;
}
</style>

<body style="background-color:rgb(179, 109, 136, 1);">

<h1>Welcome Content Editor</h1>
<p>
    Go edit some content <br>
</p>

<h2>Add Video</h2>
<form method="POST" action="http://localhost:10000/addvideo">
    <label for="txt_title">Video Title:</label>
    <input type='text' name="name"></input><br>

    <label for="txt_genre">Video Genre:</label>
    <input type='text' name="genre"></input><br>

    <label for="txt_url">Video URL:</label>
    <input type='text' name="url"></input><br>

    <input type="Submit" value="Add Video"> <br> <br>
</form>

<h2>Search Video</h2>
<form method="POST" action="http://localhost:10000/searchtitle">
    <input type="hidden" name="current_role" value="editor">
    <label for="txt_title">Search Video Title:</label>
    <input type='text' name="name"></input>
    <input type="Submit" value="Search Video">
    <br>
    <label for="txt_title">Search Video Genre:</label>
    <input type='text' name="genre"></input>
    <input type="Submit" value="Search Genre" formaction="http://localhost:10000/searchgenre"> 
</form>

<h2>Videos</h2>
<p>
    <% titles.forEach(title => { %>

        <form method="POST" action="http://localhost:10000/playvideo">
            <input type="hidden" name="name" value="<%= title %>">
            <input type="hidden" name="current_role" value="editor">
            <button class="button" type="submit" size="50"><%= title %></button>
            <button type="submit" formaction="http://localhost:10000/deletevideo">Delete</button>
        </form>
    <% }); %>
</p>

<form method="POST" action="http://localhost:10000/">
    <input type="Submit" value="Log Out">
</form>


</body>
</html>