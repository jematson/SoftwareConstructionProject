<!DOCTYPE html>
<html>

<style>
h1 {text-align:center;}
p {text-align: center;}
form {text-align: center;}
h2 {text-align:center;}
ul {text-align:center;}

body {font-family: Georgia, serif;}

.videobutton {
  background-color: #e8e0c8;
  border: none;
  border-radius: 8px;
  color: black;
  font-family: Georgia, serif;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  margin: 4px 2px;
  cursor: pointer;
  width: 250px;
}

.deletebutton {
  border: none;
  border-radius: 0px;
  font-family: Georgia, serif;
  text-align: center;
}

.smolbutton{
  border: none;
  border-radius: 8px;
  font-family: Georgia, serif;
  text-align: center;
}

.p1 {
	font-family: Georgia, serif;
    font-weight: bold;
}

.roundtext {
  border: none;
  border-radius: 4px;
  font-family: Georgia, serif;
  text-align: left;
}

</style>

<body style="background-color:rgb(179, 109, 136, 1);">

<h1>Welcome Content Editor</h1>
<p>
    Go edit some content <br>
</p>

<h2>Add Video</h2>
<form method="POST" action="http://localhost:10000/addvideo">
    <label class="p1" for="txt_title">Video Title:</label>
    <input class="roundtext" type='text' name="name"></input><br>

    <label class="p1" for="txt_genre">Video Genre:</label>
    <select name="genre">
        <option value="Music">Music</option>
        <option value="Horror">Horror</option>
        <option value="Hopecore">Hopecore</option>
        <option value="Romance">Romance</option>
    </select> <br>


    <label class="p1" for="txt_url">Video URL:</label>
    <input class="roundtext" type='text' name="url"></input><br>

    <input class="smolbutton" type="Submit" value="Add Video"> <br> <br>
</form>

<h2>Search Video</h2>
<form method="POST" action="http://localhost:10000/searchtitle">
    <input type="hidden" name="current_role" value="editor">
    <label class="p1" for="txt_title">Search Video Title:</label>
    <input class="roundtext" type='text' name="name"></input>
    <input class="smolbutton" type="Submit" value="Search Video">
    <br>
    <label class="p1" for="txt_title">Search Video Genre:</label>
    <select name="genre">
        <option value="Music">Music</option>
        <option value="Horror">Horror</option>
        <option value="Hopecore">Hopecore</option>
        <option value="Romance">Romance</option>
    </select>
    <input class="smolbutton" type="Submit" value="Search Genre" formaction="http://localhost:10000/searchgenre"> 
</form>

<h2>Videos</h2>
<p>
    <% titles.forEach(title => { %>

        <form method="POST" action="http://localhost:10000/playvideo">
            <input type="hidden" name="name" value="<%= title %>">
            <input type="hidden" name="current_role" value="editor">
            <button class="videobutton" type="submit" size="50"><%= title %></button>
            <button class="deletebutton" type="submit" formaction="http://localhost:10000/deletevideo">Delete</button>
        </form>
    <% }); %>
</p>

<form method="POST" action="http://localhost:10000/">
    <input class="smolbutton" type="Submit" value="Log Out">
</form>


</body>
</html>